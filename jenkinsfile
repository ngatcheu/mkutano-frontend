pipeline {
    agent {
        docker { image 'maven:3.9.3-eclipse-temurin-17'
         args '-v $HOME/.m2:/root/.m2' }
    }

    stages {
        stage("Clone code from VCS") {
            steps {
                script {
                    // Clone the Git repository from a specific branch
                    git branch: 'feature/sprint2',
                        url: 'https://github.com/ngatcheu/mkutano-frontend.git'
                        // Uncomment and specify credentials if the repository is private
                        //, credentialsId: 'your-credentials-id'
                }
            }
        }

        stage('Test') {

            steps {
                sh 'mvn clean verify'
            }
        }

        stage("Maven Build package") {
            steps {
                script {
                    // Run Maven package command without executing tests
                    sh "mvn package -DskipTests=true"
                }
            }
        }
        stage("Publish to Nexus Repository Manager") {
            steps {
                /sh 'mvn deploy -P release-profile --settings ./.m2/settings.xml'
            } 
        }
    }
}